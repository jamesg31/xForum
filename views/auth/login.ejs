    <link rel="stylesheet" href="/css/auth.css">
</head>
 
<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="card">
        <article class="card-body">
        <a href="/register" class="float-right btn btn-outline-primary">Register</a>
        <h4 class="card-title mb-4 mt-1">Login</h4>
            <form action="/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label>Email / Username</label>
                    <input name="username" id="username" class="form-control" placeholder="example@example.com">
                </div>
                <div class="form-group">
                    <a class="float-right" href="/reset">Forgot?</a>
                    <label>Password</label>
                    <input name="password" id="password" class="form-control" placeholder="********" type="password">
                </div>
                <div class="form-group"> 
                <div class="checkbox">
                    <label><input name="stayloggedin" type="checkbox"> Stay Logged In</label>
                </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
            </form>
        </article>
    </div>
            
<%- include('../includes/end.ejs') %>